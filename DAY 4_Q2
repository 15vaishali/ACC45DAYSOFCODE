/* package codechef; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		while(n-->0){
		    double l=sc.nextInt();
		    double t=sc.nextInt();
		    double h=sc.nextInt();
		    
		    double lt=Math.ceil(l/t);
		    double ht=Math.ceil(l/h);
		    System.out.println(lt+" "+ht);
		    if(lt==ht)
		    System.out.println(-1);
		    else if(lt>ht)
		    System.out.println((lt-ht)-1);
		}
	}
}
